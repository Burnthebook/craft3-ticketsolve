{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'URL'|t('ticketsolve'),
    instructions: 'Enter the URL to your Ticketsolve XML feed.'|t('ticketsolve'),
    id: 'xmlUrl',
    name: 'xmlUrl',
    value: settings['xmlUrl']})
}}

{{ forms.lightswitchField({
    label: 'Auto Sync'|t('ticketsolve'),
    instructions: 'Automatically sync from the XML feed.'|t('ticketsolve') ~ ' ' ~ 'Sync interval'|t('ticketsolve') ~ ': ' ~ (settings['syncDelay'] / 60) ~ ' ' ~ 'minutes'|t('ticketsolve'),
    id: 'autoSync',
    name: 'autoSync',
    on: settings['autoSync'],
    value: 1})
}}